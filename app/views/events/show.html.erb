<p id="notice"><%= notice %></p>

<% unless @event.date < Date.today %>
  <div class="columns is-centered">
    <div class="column is-7">
      <div class="card">
        <div class="card-header">
          The following people have register to attend the event
        </div>
        <div class="card-content">
          <div class="content">
            <% @event.attendees.each do |attendee|%>
              <strong><%= attendee.username %></strong>
            <% end %>
          </div>
        </div>
        <footer class="card-footer">
          <div class="card-footer-item">
            <% if current_user.id == @event.user_id %>
              <%= link_to 'Edit', edit_event_path(@event), class:"button is-success" %>
            <%end%>
          </div>
          <div class="card-footer-item">
            <%= link_to 'Back', events_path, class:"button is-dark" %>
          </div>
        </footer>
      </div>
    </div>
  </div>
<% else %>
  <div class="columns is-centered">
    <div class="column is-7">
      <div class="card">
        <div class="card-header">
          The event was attended by the following people
        </div>
        <div class="card-content">
          <div class="content">
          <% @event.attendees.each do |attendee|%>
            <strong><%= attendee.username.capitalize %></strong>
          <% end %>
          </div>
        </div>
        <footer class="card-footer">
          <div class="card-footer-item">
            <%= link_to 'Back', events_path, class:"button is-dark" %>
          </div>
        </footer>
      </div>
    </div>
  </div>
<% end %>