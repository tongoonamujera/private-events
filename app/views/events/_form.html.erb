<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class:"label" %>
    <%= form.text_field :title, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :description, class:"label" %>
    <%= form.text_area :description, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :date, class:"label" %>
    <%= form.datetime_select :date, class:"input" %>
  </div>

  <div class="field">
    <%= form.label :location, class:"label" %>
    <%= form.text_field :location, class:"input" %>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit class:"button is-success" %>
  </div>
<% end %>
